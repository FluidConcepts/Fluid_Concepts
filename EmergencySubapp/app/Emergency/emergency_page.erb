<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
	<!-- so once bookmarked the page will appear as an app and wont show the url area. -->
	
	<!-- CSS -->
		<!-- JQuery Mobile CSS -->
		<link rel="stylesheet" href="../public/jqmobile/jquery.mobile-1.0.1.css" />
		
		<link rel="stylesheet" href="../public/jqmobile/jquery.mobile.datebox-1.0.1.min.css" />

    <!-- Mobile Connection Theme CSS -->
    <link rel="stylesheet" href="../public/jqmobile/mc-theme.css"/>

    <!-- Mobile Connection Layout CSS -->
    <link rel="stylesheet" href="../public/css/mc.css" />
    <link rel="stylesheet" href="../public/css/mc-custom.css" />

    <!-- Mshell CSS -->
    <link rel="stylesheet" href="../public/css/mshell.css" /> 
    <link rel="stylesheet" href="../public/css/mshell-custom.css" />

    <!-- m-App CSS - needed for icon rendering in list-show and icon-show -->
    <link rel="stylesheet" href="../public/css/help.css" />


  <!-- JavaScript -->

    <!-- JQuery -->
    <script src="../public/jquery/jquery-1.6.4.min.js"></script>

		<!-- Mobile Connection Mobile Inits -->

    <!-- Mshell Mobile Inits -->
      <script src="../public/js/mshell-mobileinit.js"></script>

  	<!-- JQuery Mobile JS -->
      <script src="../public/jqmobile/jquery.mobile-1.0.1.min.js"></script>
    	<script src="../public/jqmobile/jquery.mobile.datebox-1.0.1.min.js"></script>

    <!-- Mobile Connection JS -->
      <script src="../public/js/mc.js"></script>

    <!-- Mshell JS -->
      <script src="../public/js/mshell.js"></script>
		
		<!-- Settings JS -->
			<script src="../../public/js/settings.js"></script>

	</head>
	<body class="ui-body-b">
		<div data-role="page" id="help-page" data-cache="false" data-add-back-btn="false" class="page logged-out">

    <div data-role="header" data-theme="x" data-id="header-mshell" data-position="fixed" data-tap-toggle="false" class="headerShadow">
			<a href="<%= Rho::RhoConfig.start_path %>" data-icon="arrow-l" data-direction="reverse" data-role="button" data-theme="b">Back</a>
			<h2>RUMobile</h2>
			<a href="" id="settingsButton" data-icon="gear" data-role="button" data-theme="b">Settings</a>
    </div><!-- header -->

	<div data-role="content" class="content" data-theme="h">
	
	<div id="settings">
		<ul data-role="listview" data-inset="true">
			<li style="color:#fff;background-color:#000066;">Settings</li>
			<li style="color:#000;background-color:#fff;">
			<div data-role="fieldcontain">
				<legend>When will you receive notifications:</legend>
				<fieldset data-role="controlgroup" data-mini="true">

    			<input type="radio" name="radio-mini" id="radio-push" value="Push(Automatic)" checked="checked" data-theme="h"/>
    			<label for="radio-push">Push(Automatic)</label>

					<input type="radio" name="radio-mini" id="radio-5mins" value="10mins"  data-theme="h"/>
    			<label for="radio-5mins">Every 5mins</label>
    	
    			<input type="radio" name="radio-mini" id="radio-10mins" value="10mins"  data-theme="h"/>
    			<label for="radio-10mins">Every 10mins</label>
				</fieldset>	
			</div>
		</li>

		<li style="color:#000;background-color:#fff;">
			<div data-role="fieldcontain">
			<legend>What alerts will you receive:</legend>
				<fieldset data-role="controlgroup">
					<input type="checkbox" name="EmergenciesCB" id="EmergenciesCB" class="custom" />
					<label for="EmergenciesCB">Emergencies</label>
	
					<input type="checkbox" name="WeatherCB" id="WeatherCB" class="custom" />
					<label for="WeatherCB">Weather</label>
	
					<input type="checkbox" name="NewsCB" id="NewsCB" class="custom" />
					<label for="NewsCB">News</label>
				</fieldset>
			</div>
		</li>
		</ul>
	</div>



	<ul data-role="listview" data-inset="true">
		<li style="color:white;background-color:#000066;color:#fff;">RU Alerts</li>
		<% if @emergencys.empty? %>
				<li style="color:#000;background-color:#fff;"><h3>No Current Alerts</h3>
				<p>There are currently no recent alerts. If you have additional questions, please call the Office of Emergency Preparedness at (540) 831-7155
        or (540) 831-6696</p>
				</li>
		<% else %>
			<% @emergencys.each do |emg| %>
			<a href="<%= url_for :action => :show, :id => emg.object %>">
				<li style="color:#000;background-color:#fff;"><h3><%= emg.title %></h3>
				<p><%= emg.description %></p>
				<p class="ui-li-aside"><strong><%= emg.date %> <%= emg.time %></strong></p>
				</li></a>
			<% end %>
		<% end %>
	</ul>
		<div data-role="button" data-theme="b">
		<a href="<%= url_for(:action => :refresh_database) %>"> Refresh </a>
		</div>
    </div>
    <div data-role="footer" data-theme="z" id="icon-mshell-show-page" data-position="fixed">
      <img data-icon="ru" src="../../public/images/blank.gif" class="footerLogo">
    </div><!-- footer -->
</div><!-- /page -->
</body>
</html>
