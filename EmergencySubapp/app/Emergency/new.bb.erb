<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Emergency</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @emergency.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Title: </td>
                <td class="itemValue"><input type="text" name="emergency[title]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Description: </td>
                <td class="itemValue"><input type="text" name="emergency[description]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Time: </td>
                <td class="itemValue"><input type="text" name="emergency[time]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Date: </td>
                <td class="itemValue"><input type="text" name="emergency[date]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Type: </td>
                <td class="itemValue"><input type="text" name="emergency[type]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
