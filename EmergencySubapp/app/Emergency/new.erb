<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @emergency.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @emergency.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="emergency[title]" class="fieldLabel">Title</label>
            <input type="text" id="emergency[title]" name="emergency[title]" <%= placeholder("Title") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="emergency[description]" class="fieldLabel">Description</label>
            <input type="text" id="emergency[description]" name="emergency[description]" <%= placeholder("Description") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="emergency[time]" class="fieldLabel">Time</label>
            <input type="text" id="emergency[time]" name="emergency[time]" <%= placeholder("Time") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="emergency[date]" class="fieldLabel">Date</label>
            <input type="text" id="emergency[date]" name="emergency[date]" <%= placeholder("Date") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="emergency[type]" class="fieldLabel">Type</label>
            <input type="text" id="emergency[type]" name="emergency[type]" <%= placeholder("Type") %> value='notseen' />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
