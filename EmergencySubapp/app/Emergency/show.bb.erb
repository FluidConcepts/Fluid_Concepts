<div data-role="page" data-add-back-btn="true">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1><%= @emergency.title %></h1>
    <%= link_to "Edit", :action => :edit, :id => @emergency.object %>
  </div>

  <div data-role="content">
    <table>
      
      <tr>
    	<td class="itemLabel">Title</td>
        <td class="itemValue"><%= @emergency.title%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Description</td>
        <td class="itemValue"><%= @emergency.description%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Time</td>
        <td class="itemValue"><%= @emergency.time%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Date</td>
        <td class="itemValue"><%= @emergency.date%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Type</td>
        <td class="itemValue"><%= @emergency.type%></td>
      </tr>
      
    </table>
  </div>

</div>
