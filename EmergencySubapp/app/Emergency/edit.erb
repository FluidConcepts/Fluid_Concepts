<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @emergency.title %></h1>
    <a href="<%= url_for :action => :show, :id => @emergency.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @emergency.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @emergency.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="emergency[title]" class="fieldLabel">Title</label>
            <input type="text" id="emergency[title]" name="emergency[title]" value="<%= @emergency.title %>" <%= placeholder( "Title" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="emergency[description]" class="fieldLabel">Description</label>
            <input type="text" id="emergency[description]" name="emergency[description]" value="<%= @emergency.description %>" <%= placeholder( "Description" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="emergency[time]" class="fieldLabel">Time</label>
            <input type="text" id="emergency[time]" name="emergency[time]" value="<%= @emergency.time %>" <%= placeholder( "Time" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="emergency[date]" class="fieldLabel">Date</label>
            <input type="text" id="emergency[date]" name="emergency[date]" value="<%= @emergency.date %>" <%= placeholder( "Date" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="emergency[type]" class="fieldLabel">Type</label>
            <input type="text" id="emergency[type]" name="emergency[type]" value="<%= @emergency.type %>" <%= placeholder( "Type" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
